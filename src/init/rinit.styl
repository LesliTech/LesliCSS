// * Configuracion de columnas automaticas
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$rgrid-columns-automatic-count = 12             // Cantidad de columnas
$rgrid-columns-automatic-prefix = 'columns-'    // Prefijo para clase css
$rgrid-columns-automatic-margin = 1             // Margen entre celdas


// * Configuracion de columnas automaticas
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$rgrid-columns-manual-count = 10            // Cantidad de columnas
$rgrid-columns-manual-prefix = 'column-'    // Prefijo para clase css
$rgrid-columns-manual-margin = 1            // Margen entre celdas


// * Configuracion de blocks automaticos
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$rblocks-columns-automatic-count = 12          // Cantidad de columnas
$rblocks-columns-automatic-prefix = 'columns-' // Prefijo para clase css

// * Configuracion de blocks manuales
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$rblocks-columns-manual-count = 10              // Cantidad de columnas
$rblocks-columns-manual-prefix = 'column-'      // Prefijo para clase css


// * Iteracion en breakpoints
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$rgrid-breakpoint-iteration = 100

// * Primer breakpoint
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$rgrid-breakpoint-start = 320

// * Ultimo beakpoint
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$rgrid-breakpoint-end = 820


