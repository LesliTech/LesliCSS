{
    "name": "lesli-css",
    "description": "SCSS Utilities for websites, apps and web applications",
    "homepage": "https://lesli.tech",
    "author": "LesliTech <hello@lesli.tech>",
    "license": "GPLv3",
    "version": "2.1.0",
    "keywords": [
        "css",
        "scss",
        "sass"
    ],
    "files":[
        "bulma",
        "source",
        "_index.scss",
        "lesli.scss",
        "lesli.txt",
        "license",
        "readme"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LesliTech/lesli-css.git"
    },
    "bugs": {
        "url": "https://github.com/LesliTech/lesli-css/issues"
    },
    "exports": {
        ".": "./lesli.scss",
        "./bulma": "./source/vendor/bulma.scss"
    },
    "dependencies": {
        "sass": "1.77.8",
        "bulma": "1.0.2"
    },
    "devDependencies": {
        "glob": "11.0.0",
        "vitest": "2.0.5",
        "sass-true": "8.0.0",
        "@vitest/coverage-v8":"2.0.5",

        "rollup": "4.12.0",
        "rollup-plugin-scss":"4.0.0"
    },
    "scripts": {
        "test": "vitest run",
        "test:report": "vitest run --reporter=verbose",
        "test:coverage": "vitest run --coverage"
    }
}
