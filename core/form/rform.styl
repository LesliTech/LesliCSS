/*!
 * Formulario estandar
 * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
 * @author Luis Gdonis <http//ldonis.com>
 * @since 0.6.0
 */
.rform

    /*!
     *  Controles de formularios
     */
    select
    textarea
    input:not([type="submit"]):not([type="button"])
        border-radius 2px
        letter-spacing 0.01rem
        padding 0.35rem 0.40rem

    /*!
     *  Campo del formulario activo
     */
    select:focus
    textarea:focus
    input:not([type="submit"]):not([type="button"]):focus
        outline none

    /*!
     *  Botones de formularios
     */
    input[type="submit"]
    input[type="button"]
        padding 0.61rem 1rem


    /*!
     *  Estilo de etiquetas
     */
    label
        display inherit
        margin inherit

/*!
 * Formulario individual con prefijo
 * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
 * @author Luis Gdonis <http//ldonis.com>
 * @since 0.7.0
 */

/*!
 * Contenedor/formulario
 */
[class^="rform individual prefix"]

    /*!
     * Contenedor de controles de formulario
     */
    & > div
        width 100%
        font-size 0
        white-space nowrap


        & > label
        & > input
            font-size 1rem
            padding 0.2rem !important
            white-space initial
            display inline-block
            vertical-align top

        /*!
         * Contenedor de de texto
         */
        & > label
            width 25%
            background #F2F2F2
            border solid 1px #ccc
            line-height 1.30
            border-right medium none #CCC

        /*!
         * Campo
         */
        & > input
            width 75%
            border-radius 0px !important

/*
 * Formulario individual con boton
 * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
 * @author Luis Gdonis <http//ldonis.com>
 * @since 0.6.0
 */
[class^="rform individual go"]

    /*!
     * Contenedor de controles de formulario
     */
    & > div
        width 100%
        font-size 0
        white-space nowrap

        & > input
            font-size 1rem
            padding 0.2rem !important
            white-space initial
            display inline-block
            vertical-align top
            border-radius 0px !important
            height 2.1 rem

        /*
         *  Campo de texto
         */
        & > input:first-child
            width 85%

        /*
         *  boton
         */
        & > button
        & > input[type="submit"]
            width 15%
            border-radius 0px !important




/*
 * Formulario lineal
 * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
 * @author Luis Gdonis <http//ldonis.com>
 * @since 0.6.0
 */
.rform.inline

/*
 * Formulario en bloque
 * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
 * @author Luis Gdonis <http//ldonis.com>
 * @since 0.6.0
 */
.rform.block
    text-align left
    display block
    margin 0 auto

    & input
    & select
    & textarea
        margin 10px 0 !important
        width 100%
        display block

/*
 * Formulario alineado
 * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
 * @author Luis Gdonis <http//ldonis.com>
 * @since 0.6.0
 */
.rform.align
    width 500px
    display block
    margin 0 auto
    text-align left

    /*
     *  Contenedor de controles
     */
    & > div
        width 100%
        margin-bottom 5px
        display inline-block

        /*
         *  Controles alineados
         */
        label
             display inline-block
             width 10rem
             text-align right
             vertical-align middle
             margin 0px 1em 0px 0px

        input
            display inline-block
            width 50%

/*
 * Formulario grupal
 * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
 * @author Luis Gdonis <http//ldonis.com>
 * @since 0.6.0
 */
.rform.group
    width 350px
    display block
    margin 0 auto
    text-align left

    /*
     *  Contenedor de controles
     */
    & > div
        margin 20px 0

        /*
         *  Controles de formulario
         */
        input
        select
            margin 0px
            width 100%
            border-bottom-width 0px !important
            box-shadow none !important
            border-radius 0px !important

        input:first-child
            border-radius 5px 5px 0 0 !important

        input:last-child
            border-radius 0 0 5px 5px !important
            border-bottom-width 1px !important
