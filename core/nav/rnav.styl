/*!
 *  Menu estandar
 * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
 * @author Luis Gdonis <http//ldonis.com>
 * @since 0.6.0
 */
.rnavbar
    width 100%

    & > ul
        font-size 0

    /*!
     *  Contenedor de enlaces
     */
    li
        display inline-block
        font-size initial

    /*!
     *  Enlaces
     */
    a
        display block
        padding 0.3rem 0.8rem


    /*!
     *  Menu doble
     * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
     * @author Luis Gdonis <http//ldonis.com>
     * @since 0.6.0
     */
    &.doble
        width 100%
        font-size 0
        white-space nowrap

    &.doble > ul
        width 50%
        font-size 1rem
        white-space initial
        display inline-block


    /*!
     *  Menu izquierdo
     */
    &.doble > ul:first-child
        text-align left


    /*!
     *  Menu derecho
     */
    .doble > ul:last-child
        text-align right


    /*!
     *  Menu multinivel
     * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
     * @author Luis Gdonis <http//ldonis.com>
     * @since 0.6.0
     */
    &.multi

    /*!
     *  Contenedor principal de menu
     */
    &.multi > ul
        position relative

    /*!
     *  Oculta el submenu
     */
    &.multi > ul li ul
        display none
        position absolute


    /*!
     *  Muestra el submenu
     */
    &.multi > ul li:hover ul
        display block

    /*!
     *  Contenedor de etiquetas de submenu
     */
    &.multi > ul ul li
        display block


    /*!
     *  Menu vertical
     * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
     * @author Luis Gdonis <http//ldonis.com>
     * @since 0.5.0
     */
    .nav


    /*
     *  Titulo de lista o menu
     */
    .nav li:first-child


    .nav ul > li:first-child
        font-size 0.9rem
        margin-top 0.5em
        margin-bottom 0.5em
        text-transform uppercase


    .nav ul li:not(:first-child):hover,
    .nav ul li:not(:first-child) a:hover
        cursor pointer
